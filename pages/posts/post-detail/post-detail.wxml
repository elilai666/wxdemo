<view class='container'>
    <image  class='head-image' src='{{headImgSrc}}' ></image>
    <image wx:if='{{isPlayingMusic}}' class='audio'  catchtap='onMusicTap' src='/images/music/music-stop.png' ></image>
    <image wx:else class='audio'  catchtap='onMusicTap' src='/images/music/music-start.png' ></image>
    <view class='author-date'>
        <image class='avatar' src='{{avatar}}'></image>
        <text class='author'>{{author}}</text>
        <text class='const-text'>发表于</text>
        <text class='date'>{{dateTime}}</text>
    </view>
    <text class='title'>{{title}}</text>
    <view class='tool'>
        <image wx:if='{{collected}}' catchtap='onColectionTap' src='/images/icon/collection.png'></image>
        <image wx:else catchtap='onColectionTap' src='/images/icon/collection-anti.png'></image>
        <image catchtap='onShareTap' src='/images/icon/share.png'></image>
    </view>
    <text class='detail'>{{detail}}</text>
</view>