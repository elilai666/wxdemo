<view class='container'>
    <image class='head-image' src='{{headImgSrc}}' ></image>
    <image class='audio' src='/images/music/music-start.png' ></image>
    <view class='author-date'>
        <image class='avatar' src='{{avatar}}'></image>
        <text class='author'>{{author}}</text>
        <text class='const-text'>发表于</text>
        <text class='date'>{{dateTime}}</text>
    </view>
    <text class='title'>{{title}}</text>
    <view class='tool'>
        <image wx:if='{{collected}}' bindtap='onColectionTap' src='/images/icon/collection.png'></image>
        <image wx:else bindtap='onColectionTap' src='/images/icon/collection-anti.png'></image>
        <image src='/images/icon/share.png'></image>
    </view>
    <text class='detail'>{{detail}}</text>
</view>