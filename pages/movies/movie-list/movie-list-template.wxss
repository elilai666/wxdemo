@import "../movie/movie-template.wxss";

.movie-list-container {
    background: #fff;
    display: flex;
    flex-direction: column;
    margin-bottom: 20rpx;
    padding: 20rpx 0;
}

.movie-head {
    padding: 0 20rpx 22rpx;
    display: flex;
    justify-content: space-between;
    align-items: baseline;
}

.more-text {
    margin-right: 10rpx;
    color: #1f4ba5;
    vertical-align: middle;
}

.more-img {
    width: 9rpx;
    height: 16rpx;
    vertical-align: middle;
}

.slogan {
    font-size: 24rpx;
}

.movies-container {
    display: flex;
    justify-content: space-between;
    padding: 0 22rpx;
}