/* pages/movies/movies.wxss */
@import "./movie-list/movie-list-template.wxss";
@import "./movie-grid/movie-grid-template.wxss";

.container {
    background: #eee;
}

.search {
    background-color: #f2f2f2;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding:0 22rpx;
}
.search-img {
    margin-right: 20rpx;
}

.search-input {
    flex: 1;
    font-size: 18px;
}



.placeholder {
    font-size: 14px;
    color: #d1d1d1;
    margin-left: 20rpx;
}