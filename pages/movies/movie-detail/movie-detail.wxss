@import "../stars/stars-template.wxss";
.container {
    display: flex;
    flex-direction: column;
}
.head-img {
    width: 100%;
    height: 350rpx;
    filter: blur(10px);
}
.head-img-hover {
    width: 100%;
    height: 350rpx;
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    flex-direction: column;
}
.main-title {
    font-size: 19px;
    color: #fff;
    font-weight: bold;
    margin: 50rpx 0 0 40rpx;
    letter-spacing: 2px;
    text-shadow: 1px 1px 2px black;
}

.sub-title {
    font-size: 14px;
    color: #fff;
    margin: 30rpx 0 0 40rpx;
    text-shadow: 1px 1px 1px black;
}

.like {
    display: flex;
    margin: 30rpx 0 0 40rpx;
}

.highlight-font {
    color: #f21146;
    font-size: 11px;
    margin-right: 10rpx;
}
.plain-font {
    color: #fff;
    text-shadow: 1px 1px 1px black;
    font-size: 11px;
    margin-right: 30rpx;
}
.movie-img {
    position: absolute;
    height: 238rpx;
    width: 175rpx;
    top: 175rpx;
    right: 30rpx;
}
.summary {
    padding: 40rpx;
    color: #777;
}
.original-title {
    color: #1f3463;
    font-size: 12px;
    font-weight: bold;
    margin-bottom: 40rpx;
}
.mark {
    margin-right: 30rpx;
    white-space: nowrap;
    color: #999;
}
.flex-row {
    display: flex;
    margin-bottom: 10rpx;
}
.synopsis {
    display: flex;
    flex-direction: column;
    padding: 40rpx;
}
.synopsis-tittle {
    color: #999;
}
.synopsis-content {
    margin-top: 20rpx;
    line-height: 40rpx;
    letter-spacing: 1px;
}
.bottom-hr {
    border-bottom: 1px solid #d9d9d9;
}
.cast {
    padding: 40rpx;
    display: flex;
    flex-direction: column;
}
.cast-title {
    color: #999;
    margin-bottom: 40rpx;
}
.cast-imgs {
    white-space: nowrap;
}
.cast-container {
    display: inline-flex;
    flex-direction: column;
    margin: 0 40rpx 50rpx 0;
    width: 170rpx;
    text-align: center;
    white-space: normal;
}
.cast-img {
    width: 170rpx;
    height: 250rpx;
}
